---
import FAQ from '@/components/FAQ.astro';
import { ChevronRight } from 'lucide-astro';

interface Props {
  limit?: number;
}

const { limit = 6 } = Astro.props;
---

<section id="faq" class="py-20 bg-gradient-to-br from-gray-50 to-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-4">
      <h2 class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-purple-600 to-blue-600 bg-clip-text text-transparent mb-4">
        Preguntas Frecuentes
      </h2>
      <p class="text-lg text-gray-700 max-w-2xl mx-auto">
        Resuelve tus dudas sobre logopedia y nuestros servicios
      </p>
    </div>
    
    <FAQ limit={limit} />
    
    <div class="text-center mt-10">
      <a 
        href="/preguntas-frecuentes" 
        class="group inline-flex items-center gap-2 text-purple-600 hover:text-purple-700 font-semibold text-lg transition-all duration-300 hover:gap-3"
      >
        Ver todas las preguntas
        <ChevronRight class="w-5 h-5 group-hover:translate-x-0.5 transition-transform" />
      </a>
    </div>
  </div>
</section>